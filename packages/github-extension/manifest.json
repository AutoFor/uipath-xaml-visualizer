{
  "manifest_version": 3,
  "name": "UiPath XAML Visualizer for GitHub",
  "version": "1.0.0",
  "description": "GitHub上でUiPath XAMLファイルを視覚的に表示するChrome拡張機能",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
