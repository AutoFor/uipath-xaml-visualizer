{
  "name": "uipath-xaml-visualizer",
  "version": "1.0.0",
  "description": "GitHub上のUiPath XAMLファイルをChrome拡張機能で視覚化するツール",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:shared": "npm run build --workspace=packages/shared",
    "build:github": "npm run build --workspace=packages/github-extension",
    "dev:github": "npm run dev --workspace=packages/github-extension",
    "dev:github:fixed": "npm run build:shared && npm run dev:fixed --workspace=packages/github-extension",
    "dev:github:chrome": "npm run build:shared && npm run dev:chrome --workspace=packages/github-extension",
    "setup:github": "npm run setup --workspace=packages/github-extension",
    "test": "npm run test --workspaces",
    "clean": "rimraf packages/*/dist packages/*/node_modules"
  },
  "keywords": [
    "uipath",
    "xaml",
    "github",
    "chrome-extension",
    "visualizer",
    "rpa"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  }
}
