{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "VSCode 拡張機能をデバッグ",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-extension"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/vscode-extension/dist/**/*.js"
      ],
      "preLaunchTask": "npm: dev - packages/vscode-extension"
    },
    {
      "name": "VSCode 拡張機能をデバッグ（ビルド済み）",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-extension"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/vscode-extension/dist/**/*.js"
      ]
    }
  ]
}
