{
  "manifestVersion": 1,
  "id": "uipath-xaml-visualizer",
  "version": "1.0.0",
  "name": "UiPath XAML Visualizer",
  "description": "Visualize UiPath XAML workflow files in Azure DevOps",
  "publisher": "your-publisher-id",
  "categories": [
    "Azure Repos"
  ],
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "icons": {
    "default": "images/logo.png"
  },
  "content": {
    "details": {
      "path": "README.md"
    }
  },
  "files": [
    {
      "path": "dist",
      "addressable": true
    },
    {
      "path": "images",
      "addressable": true
    }
  ],
  "contributions": [
    {
      "id": "xaml-file-viewer",
      "type": "ms.vss-web.hub",
      "description": "XAML File Viewer",
      "targets": [
        "ms.vss-code-web.source-item-menu"
      ],
      "properties": {
        "name": "View XAML",
        "uri": "dist/viewer.html",
        "icon": "images/icon.png",
        "supportsMobile": false
      }
    },
    {
      "id": "xaml-diff-viewer",
      "type": "ms.vss-web.hub",
      "description": "XAML Diff Viewer",
      "targets": [
        "ms.vss-code-web.diff-action-menu"
      ],
      "properties": {
        "name": "Visual Diff",
        "uri": "dist/diff-viewer.html",
        "icon": "images/icon.png"
      }
    }
  ],
  "scopes": [
    "vso.code",
    "vso.code_write"
  ]
}
