{
  "name": "uipath-xaml-visualizer",
  "version": "1.0.0",
  "description": "UiPath XAMLファイルを視覚化するツール群（Azure DevOps、VSCode、GitHub対応）",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:shared": "npm run build --workspace=packages/shared",
    "build:azdo": "npm run build --workspace=packages/azdo-extension",
    "build:vscode": "npm run build --workspace=packages/vscode-extension",
    "build:github": "npm run build --workspace=packages/github-extension",
    "dev:azdo": "npm run dev --workspace=packages/azdo-extension",
    "dev:vscode": "npm run dev --workspace=packages/vscode-extension",
    "dev:github": "npm run dev --workspace=packages/github-extension",
    "test": "npm run test --workspaces",
    "serve": "npm run serve --workspace=packages/azdo-extension",
    "clean": "rimraf packages/*/dist packages/*/node_modules"
  },
  "keywords": [
    "uipath",
    "xaml",
    "azure-devops",
    "vscode",
    "github",
    "visualizer",
    "rpa"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  }
}
