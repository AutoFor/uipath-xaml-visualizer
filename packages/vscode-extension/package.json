{
  "name": "uipath-xaml-visualizer-vscode",
  "displayName": "UiPath XAML Visualizer",
  "description": "VSCodeでUiPath XAMLファイルを視覚的に表示する拡張機能",
  "version": "1.0.0",
  "publisher": "autofor",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "uipath",
    "xaml",
    "rpa",
    "workflow",
    "visualizer"
  ],
  "activationEvents": [
    "onLanguage:xml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "uipath-xaml-visualizer.openVisualizer",
        "title": "UiPath: Open XAML Visualizer",
        "icon": "$(graph)"
      },
      {
        "command": "uipath-xaml-visualizer.showDiff",
        "title": "UiPath: Show XAML Diff",
        "icon": "$(git-compare)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .xaml",
          "command": "uipath-xaml-visualizer.openVisualizer",
          "group": "navigation"
        }
      ],
      "scm/resourceState/context": [
        {
          "when": "resourceExtname == .xaml",
          "command": "uipath-xaml-visualizer.showDiff",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "UiPath XAML Visualizer",
      "properties": {
        "uipathXamlVisualizer.autoOpen": {
          "type": "boolean",
          "default": false,
          "description": "XAMLファイルを開いたときに自動的にビジュアライザーを表示"
        },
        "uipathXamlVisualizer.showScreenshots": {
          "type": "boolean",
          "default": true,
          "description": "Informative Screenshotを表示"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.22.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@uipath-xaml-visualizer/shared": "^1.0.0"
  }
}
